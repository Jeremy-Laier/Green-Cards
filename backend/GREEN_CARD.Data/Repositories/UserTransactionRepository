using System;
using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;
using Microsoft.EntityFrameworkCore;
using GREEN_CARD.Core.Data;
using GREEN_CARD.Core.Models;

namespace GREEN_CARD.Data.Repositories
{
    public class TransactionRepository : IUserTransactioRepository
    {
        private readonly GREEN_CARDContext _db;

        public ReceiptRepository(GREEN_CARDContext db){
            _db = db;
        }

        public Task<Users> Get( int id){
            return _db.UserID.Where(u => u.UserID == id);
        }

        public Task<list<Transaction>> Get(int id, DateTime in, DateTime out){
            return _db.TransactionId.Where(t => (t.UserId == id) 
                                        && t => (t.Date >= in) 
                                        && t => (t.Date <= out));
        }

    }
}

